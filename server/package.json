{
  "name": "leedz-server",
  "version": "1.0.0",
  "description": "Leedz Invoicer Server - Node.js/Express with Prisma SQLite",
  "main": "src/leedz_server.js",
  "bin": "src/leedz_server.js",
  "scripts": {
    "build": "tsc",
    "start": "node src/leedz_server.js",
    "mcp": "node src/mcp_server.js",
    "dev": "ts-node src/server.ts",
    "watch": "tsc --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "pkg": {
    "assets": [
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*",
      "node_modules/csv-writer/**/*",
      "prisma/schema.prisma",
      "src/**/*.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-win-x86",
      "node18-win-arm64"
    ],
    "outputPath": "dist-pkg"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
