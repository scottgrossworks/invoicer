{
  "manifest_version": 3,
  "name": "The Leedz",
  "version": "1.0",
  "description": "/DEV/INVOICER/client/",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open Leedz Invoicer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": [
        "js/content.js"
      ],
      "css": ["css/leedz_layout.css"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["https://mail.google.com/*"],
      "js": [
        "js/content.js"
      ],
      "css": ["css/leedz_layout.css"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": [
        "js/content.js"
      ],
      "css": ["css/leedz_layout.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/*",
        "css/pdf_invoice.css",
        "js/*",
        "js/lib/handlebars.runtime.min.js",
        "lib/*",
        "invoicer_config.json",
        "sidebar.html",
        "pdf_settings.html",
        "icons/*",
        "invoice_template.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}